{
	"parserOptions": {
		"ecmaVersion": 2017
	},

	"env": {
		"es6": true,
		"node": true
	},

	"root": true,
	"extends": ["eslint:recommended"],
	"rules": {
		"camelcase": ["error"],
		"capitalized-comments": [
			"error",
			"always",
			{
				"ignoreConsecutiveComments": true
			}
		],
		"curly": ["error", "all"],
		"eqeqeq": ["error", "smart"],
		"func-style": ["error", "declaration"],
		"multiline-comment-style": ["error", "separate-lines"],
		"no-underscore-dangle": ["warn"],
		"arrow-parens": ["error", "always"],
		"arrow-spacing": ["error"],
		"block-spacing": ["error", "always"],
		"brace-style": ["error", "stroustrup"],
		"comma-spacing": ["error"],
		"dot-location": ["error", "property"],
		"func-call-spacing": ["error", "never"],
		"indent": ["error", "tab"],
		"key-spacing": ["warn"],
		"keyword-spacing": [
			"error",
			{
				"overrides": {
					"if": { "after": false },
					"for": { "after": false },
					"while": { "after": false }
				}
			}
		],
		"quotes": [
			"error",
			"single",
			{
				"avoidEscape": true,
				"allowTemplateLiterals": true
			}
		],
		"semi": ["error", "always"],
		"space-before-function-paren": ["error", "never"],
		"space-in-parens": ["error", "never"],
		"space-infix-ops": ["error"]
	},
	"ignorePatterns": [
		"src/config/*",
		"src/utils/auth0-api.js",
		"tests/test.js",
		"tests/video/pushStream.js",
		"src/streaming-service.js"
	]
}
